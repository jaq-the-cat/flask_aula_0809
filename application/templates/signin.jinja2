{% extends 'index.jinja2' %}

{% block body %}
<form method="post" action="{{ url_for('auth.signin') }}">
  {{ lf.csrf_token }}

  {{ lf.email.label }}
  {{ lf.email }}

  {{ lf.password.label }}
  {{ lf.password }}

  {{ lf.remember_me }}
  {{ lf.remember_me.label }}

  <button type="submit">Sign in</button>
</form>
{% endblock body %}
